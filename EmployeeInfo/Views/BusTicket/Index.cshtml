
@model BusTicketViewModel
@{
    ViewData["Title"] = "Index";
}
<style>
    #submitBtn {
        border-radius: 255px;
        background: dodgerblue;
        color: white;
        border: none;
        padding: 5px 50px 5px 50px;
        margin-right: 50px;
        font-size: 22px;
    }
</style>

<section>
    <form id="myForm" asp-controller="BusTicket" asp-action="Index" method="post">
        <div class="card">
            <div class="card-header" style="color:green">
                <p style="text-align:center; color:blue;font-size:50px">BUS TICKET</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-form-label col-md-6">P Name</label>
                            <div class="col-md-6">
                                <input type="text" name="pname" id="pname" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-form-label col-md-6">P Address</label>
                            <div class="col-md-6">
                                <input type="text" name="paddress" id="paddress" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-form-label col-md-6">Form</label>
                            <div class="col-md-6">
                                <input type="text" name="form" id="form" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-form-label col-md-6">TO</label>
                            <div class="col-md-6">
                                <input type="text" name="to" id="to" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-form-label col-md-6">Sit No</label>
                            <div class="col-md-6">
                                <input type="text" name="sitno" id="sitno" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-form-label col-md-6">Amount</label>
                            <div class="col-md-6">
                                <input type="text" name="amount" id="amount" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-md-2">Comment</label>
                    <div class="col-md-10">
                        <textarea rows="3" type="text" name="comment" id="comment" class="form-control"></textarea>
                    </div>
                </div>
            </div>

        </div>

        <button type="button" class="btn btn-success" onclick="submitFun()" style="float:right;">Save</button>

        @*<button
        type="submit"
        onclick="submitFun()"
        id="submitBtn"
        class="btn btn-success"
        style="float:right;">Save</button>*@
    </form>
</section>

@section Scripts{
    
    <script>

        $(document).ready(function () {

        });

        function submitFun() {

            var data = $("#myForm").serialize();

            $.ajax({
                url: "/BusTicket/IndexSaveByAjaxFun",
                type: "post",
                data: data,
                success: function (res) {                    
                    if (res == "success") {
                        swal({
                            title: 'Success!', text: 'Saved Successfully!', type: 'success', showCancelButton: false, confirmButtonColor: '#3085d6', confirmButtonText: 'Ok!'
                        }).then(function () {
                            location.reload();
                        });

                    }
                    else {
                        swal('Warning!', 'Unable to save!', 'warning');
                    }
                }
            })

        }

    </script>

}